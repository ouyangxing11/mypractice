<?php
function line($a){
		for($i=0;$i<$a;$i++){
			for($b=1;$b<=$a-$i;$b++){
				echo "&nbsp";
			}
			for($c=0;$c<=(2*$i);$c++){
				echo "*";
			}
			echo "<br/>";
		}
		
		for($i=$a-1;$i>=1;$i--){
			for($b=0;$b<=$a-$i;$b++){
				echo "&nbsp";
			}
			for($c=1;$c<2*$i;$c++){
				echo "*";
			}
			echo "<br/>";
		}
	}
	line(5);

?>
